<?xml version="1.0" encoding="utf-8" ?>
<odoo>

  <record id="view_repair_order_tree_inherit" model="ir.ui.view">
    <field name="name">repair.order.tree.inherit</field>
    <field name="model">repair.order</field>
    <field name="inherit_id" ref="repair.view_repair_order_tree" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='location_id']" position="after">
        <field name="product_location_dest_id" optional="hide" />
      </xpath>
    </field>
  </record>

  <record id="view_repair_order_form_inherit" model="ir.ui.view">
    <field name="name">repair.form.form.inherit</field>
    <field name="model">repair.order</field>
    <field name="inherit_id" ref="repair.view_repair_order_form" />
    <field name="arch" type="xml">
      <xpath
                expr="//group[@name='locations']/field[@name='location_id']"
                position="after"
            >
        <field
                    name="product_location_dest_id"
                    readonly="state != 'draft'"
                    options="{'no_create': True}"
                />
      </xpath>
    </field>
  </record>

</odoo>
