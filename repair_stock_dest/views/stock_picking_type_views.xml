<?xml version="1.0" encoding="utf-8" ?>
<odoo>
  <record id="repair_type_view_picking_type_form_inherit" model="ir.ui.view">
    <field name="name">stock.picking.type.repair.type.inherit</field>
    <field name="model">stock.picking.type</field>
    <field name="inherit_id" ref="repair.repair_view_picking_type_form" />
    <field name="arch" type="xml">
      <xpath expr="//field[@name='default_location_src_id']" position="after">
        <field
                    name="default_product_location_dest_id"
                    options="{'no_create': True}"
                    invisible="code != 'repair_operation'"
                    required="code == 'repair_operation'"
                />
      </xpath>
    </field>
  </record>
</odoo>
